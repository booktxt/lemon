<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.lemon.dao.impl.FriendshipDaoImpl">
    <resultMap id="friendshipResultMap" type="Friendship" autoMapping="true">
        <id property="id" column="id" />
        <result property="createdTime" column="created_time"/>
        <result property="userId" column="user_id"/>
        <result property="friendId" column="friend_id"/>
        <!--<association property="detail" javaType="Detail" resultMap="com.demo.domain.Detail.detailResultMap"/>-->
    </resultMap>
    <delete id="deleteById">
        DELETE FROM friendship WHERE id = #{id};
    </delete>

    <delete id="delete">
        DELETE FROM friendship
        <where>
            <if test="userId != null and userId != ''">user_id = #{userId}</if>
            <if test="friendId != null and friendId != ''">and friend_id = #{friendId}</if>
            <if test="type != null and type != ''">and type = #{type}</if>
            <if test="group != null and group != ''">and group = #{group}</if>
        </where>
    </delete>

    <insert id="insert" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO friendship (created_time, user_id, friend_id, type, group)
        VALUES (#{createdTime}, #{userId}, #{friendId}, #{type}, #{group});
    </insert>

    <update id="update" >
        UPDATE friendship
        <set>
            <if test="userId != null and userId != ''">user_id = #{userId}</if>
            <if test="friendId != null and friendId != ''">and friend_id = #{friendId}</if>
            <if test="type != null and type != ''">and type = #{type}</if>
            <if test="group != null and group != ''">and group = #{group}</if>
        </set>
        WHERE id = #{id};
    </update>

    <select id="findById" resultMap="userResultMap">
        SELECT * FROM friendship WHERE id = #{id};
    </select>

    <select id="findByPage" resultMap="userResultMap">
        SELECT * FROM friendship
        <where>
            <if test="userId != null and userId != ''">user_id = #{userId}</if>
            <if test="friendId != null and friendId != ''">and friend_id = #{friendId}</if>
            <if test="type != null and type != ''">and type = #{type}</if>
            <if test="group != null and group != ''">and group = #{group}</if>
        </where>
    </select>


    <select id="findEntities" resultMap="userResultMap">
        SELECT * FROM friendship
        <where>
            <if test="userId != null and userId != ''">user_id = #{userId}</if>
            <if test="friendId != null and friendId != ''">and friend_id = #{friendId}</if>
            <if test="type != null and type != ''">and type = #{type}</if>
            <if test="group != null and group != ''">and group = #{group}</if>
        </where>
    </select>

    <select id="count" resultMap="userResultMap">
        SELECT count(*) FROM friendship
        <where>
            <if test="userId != null and userId != ''">user_id = #{userId}</if>
            <if test="friendId != null and friendId != ''">and friend_id = #{friendId}</if>
            <if test="type != null and type != ''">and type = #{type}</if>
            <if test="group != null and group != ''">and group = #{group}</if>
        </where>
    </select>
</mapper>